// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  rollNumber String  @id
  name       String
  image      String?
  email      String
  phone      String
  role       String
  issues     Issue[]
}

model Books {
  id        String  @id @default(uuid()) // You can add a default value for the "id" field
  title     String
  edition   String
  author    String
  publisher String
  available Boolean
  issues    Issue[]
}

model Issue {
  id             String  @id @default(uuid())
  created_at     String
  overdue        Boolean
  overdue_amount Int
  book_id        String
  book_title     String
  user_id        String
  user_name      String
  user_role      String
  user           User    @relation(fields: [user_id], references: [rollNumber])
  book           Books   @relation(fields: [book_id], references: [id])
}
